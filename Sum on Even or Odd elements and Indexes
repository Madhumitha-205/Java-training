import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
         Scanner sc = new Scanner(System.in);
        int n =sc.nextInt();
        int evensum=0;
         int oddsum=0;
        int evenind=0;
        int oddind=0;
        int arr[]=new int[n];
        for(int i=0;i<n;i++){
            arr[i]=sc.nextInt();
            if(arr[i]%2==0)
                evensum +=arr[i];
            else
                oddsum +=arr[i];
            if(i%2==0)
                evenind +=arr[i];
            else
                oddind +=arr[i];
        
    }
        System.out.print(evensum+" "+oddsum+" "+evenind+" "+oddind);
    }
}
